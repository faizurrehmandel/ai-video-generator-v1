# Replit configuration file for the AI Video Generator V1 project.
# This file specifies how to run the application, manage packages,
# and configure the environment within the Replit workspace.

# The entrypoint is the file that will be opened by default in the editor.
entrypoint = "main.py"

# The command to execute when the "Run" button is clicked.
# This starts the Flask development server, making the web application accessible.
[run]
command = ["python", "main.py"]

# Configuration for the Replit Universal Package Manager (UPM).
# This section tells Replit that we are using Python and allows it to
# automatically manage dependencies found in `pyproject.toml` or `requirements.txt`.
[packager]
language = "python3"

# It's best practice to manage secrets using Replit's "Secrets" tool.
# The application code (main.py) will read these as environment variables.
# You must add your API keys in the "Tools > Secrets" panel on the left.
#
# Required secrets for this project:
# GEMINI_API_KEY = "your_gemini_api_key_here"
# ELEVENLABS_API_KEY = "your_elevenlabs_api_key_here"
# PEXELS_API_KEY = "your_pexels_api_key_here"
# FLASK_SECRET_KEY = "a_strong_random_secret_key_for_sessions"

# Specifies the Python language server to use for features like
# linting, code intelligence, and formatting.
[languages.python]
pattern = "**/*.py"
[languages.python.languageServer]
start = "pylsp"

# Specifies which files/directories the Replit file watcher should ignore.
# This improves performance by preventing the server from restarting
# when non-code files (like generated videos) are added or modified.
[watcher]
ignoredPaths = [
  ".cache",
  "__pycache__",
  "static/videos",
  "venv",
  ".venv",
  "*.log"
]